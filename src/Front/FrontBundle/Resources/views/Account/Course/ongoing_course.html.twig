<!DOCTYPE html>
<html>
    <head>
        <link href="../css/draw/style_draw_board.css?t={{ now|date('m-d-i-s') }}" rel="stylesheet" type="text/css" />
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" type="text/javascript"></script>
        
<!--        <script src="http://93.116.229.42:8000/socket.io/socket.io.js"></script>-->
        <script src="http://localhost:8000/socket.io/socket.io.js"></script>
        <script src="../js/board/socket.js?t={{ now|date('m-d-i-s') }}"></script>
        <script src="../js/board/draw/client_drawer.js?t={{ now|date('m-d-i-s') }}"></script>
        <script src="../js/board/draw/drawing.js?t={{ now|date('m-d-i-s') }}"></script>
        <script src="../js/board/board_manager.js?t={{ now|date('m-d-i-s') }}"></script>
        <script>
            var token = '{{ token }}';
            jQuery(document).ready(function(){
                window.learn_draw.init();
                window.board_manager.init();
            })
        </script>
    </head>
    <body style="position: relative;">
        <div style="height: 25px; border:1px solid black;">
            {% if is_teacher %}
                Add board type: 
                <select id="board_types">
                    <option value="draw">Drawing</option>
                    <option value="programming">Programming</option>
                    <option value="languages">Languages</option>
                </select>
                board name: <input type="text" id="board_name" value="">
                <input type="button" id="add_board" value="Add">
            {% endif %}
        </div>
        <div id="boards_tabs"></div>
        <table border="1" width="100%" height="100%" cellpadding="0" cellspacing="0">
            <tr>
                <td valign="top" width="50">
                    <div id="learn_colors"></div>
                    <br />
                    <div>
                        <span style="font-size: 10px;">Stroke width:</span>
                        <br />
                        <a href="javascript:;" class="learn_stroke_width" style="border:1px solid black; padding:2px; font-size:11px;" data-value="1">1</a>
                        <a href="javascript:;" class="learn_stroke_width" style="border:1px solid black; padding:2px; font-size:11px;" data-value="2">2</a>
                        <a href="javascript:;" class="learn_stroke_width" style="border:1px solid black; padding:2px; font-size:11px;" data-value="3">3</a>
                        <a href="javascript:;" class="learn_stroke_width" style="border:1px solid black; padding:2px; font-size:11px;" data-value="4">4</a>
                        <a href="javascript:;" class="learn_stroke_width" style="border:1px solid black; padding:2px; font-size:11px;" data-value="5">5</a>
                    </div>
                    <br />
                    <input type="button" class="learn_instrument" data-type="path" value="Pencil">
                    <br />
                    <input type="button" class="learn_instrument" data-type="eraser" value="Eraser">
                    <br />
                    <input type="button" class="learn_instrument" data-type="line" value="Line">
                    <br />
                    <input type="button" class="learn_instrument" data-type="circle" value="Circle">
                    <br />
                    <input type="button" class="learn_instrument" data-type="rect" value="Rect">
                    <br />
                    <input type="button" class="learn_instrument" data-type="text" value="Text">
                    <br />
                    <input type="button" class="learn_instrument" data-type="highlighter" value="Highlighter">
                    <br />
                    <input type="button" class="learn_instrument" data-type="image" value="Image">
                    <br />
                    <input type="button" class="learn_instrument" data-type="grid" value="Grid">
                    <br />
                </td>
                <td>
                    <svg style="overflow: hidden; position: relative;" height="1500" width="2000" id="current_svg" version="1.1" xmlns="http://www.w3.org/2000/svg">
                        <defs style="-webkit-tap-highlight-color: rgba(0, 0, 0, 0);"></defs>
                    </svg>
                </td>
            </tr>
        </table>
    </body>
</html>