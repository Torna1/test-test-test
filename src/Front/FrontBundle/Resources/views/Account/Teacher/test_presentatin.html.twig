{% extends '::base_account_teacher.html.twig' %}
{% block body %}
        <!-- Begin slides. Just make elements with a class of slide. -->
        {% for item in presentation_sheets %}
            <section class="slide">
                {{ item.sheet_content|raw }}
            </section>
        {% endfor %}

        <!-- deck.navigation snippet -->
        <a href="#" class="deck-prev-link" title="Previous">&#8592;</a>
        <a href="#" class="deck-next-link" title="Next">&#8594;</a>

        <!-- deck.status snippet -->
        <p class="deck-status">
            <span class="deck-status-current"></span>
            /
            <span class="deck-status-total"></span>
        </p>

        <!-- deck.goto snippet -->
        <form action="." method="get" class="goto-form">
            <label for="goto-slide">Go to slide:</label>
            <input type="text" name="slidenum" id="goto-slide" list="goto-datalist">
            <datalist id="goto-datalist"></datalist>
            <input type="submit" value="Go">
        </form>

        <!-- deck.hash snippet -->
        <a href="." title="Permalink to this slide" class="deck-permalink">#</a>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="../js/presentation/deck/web2.0.css">
    <link rel="stylesheet" href="../js/presentation/deck/deck.core.css">
    <!-- Extension CSS files go here. Remove or add as needed. -->
    <link rel="stylesheet" href="../js/presentation/deck/goto/deck.goto.css">
    <link rel="stylesheet" href="../js/presentation/deck/menu/deck.menu.css">
    <link rel="stylesheet" href="../js/presentation/deck/navigation/deck.navigation.css">
    <link rel="stylesheet" href="../js/presentation/deck/status/deck.status.css">
    <link rel="stylesheet" href="../js/presentation/deck/hash/deck.hash.css">
    <link rel="stylesheet" href="../js/presentation/deck/scale/deck.scale.css">
    <link rel="stylesheet" href="../js/presentation/deck/horizontal-slide.css">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="../js/presentation/deck/modernizr.custom.js"></script>
    <script src="../js/presentation/deck/deck.core.js"></script>

    <!-- Extension JS files. Add or remove as needed. -->
    <script src="../js/presentation/deck/deck.core.js"></script>
    <script src="../js/presentation/deck/hash/deck.hash.js"></script>
    <script src="../js/presentation/deck/menu/deck.menu.js"></script>
    <script src="../js/presentation/deck/goto/deck.goto.js"></script>
    <script src="../js/presentation/deck/status/deck.status.js"></script>
    <script src="../js/presentation/deck/navigation/deck.navigation.js"></script>
    <script src="../js/presentation/deck/scale/deck.scale.js"></script>
    
