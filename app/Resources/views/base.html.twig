<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Learn.md{% endblock %}</title>
        <meta name="keywords" content="{% block keywords %}{% endblock %}" />
        <meta name="description" content="{% block description %}{% endblock %}" />
        {% block canonical %}{% endblock %}
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
        <script src="/js/learn.js"></script>
        
        {% block stylesheets %}
            <link href="/css/bootstrap.css" rel="stylesheet" type="text/css" />
            <link href="/css/style.css" rel="stylesheet" type="text/css" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" style="margin-top: 7px;" href="{{ path('homepage') }}">learn.md</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav" style="margin-top: 7px;">
                            <li class="active"><a href="{{ path('homepage') }}">Home</a></li>
                            <li><a href="{{ path('homepage') }}">How it works</a></li>
                            <li><a href="{{ path('course_list') }}">Courses</a></li>
                            <li><a href="{{ path('teacher_list') }}">Teachers</a></li>
                            <li><a href="{{ path('register') }}">Register</a></li>
                            <li><a href="{{ path('homepage') }}">Contact</a></li>
                        </ul>
                        <form class="navbar-form pull-right" method="post" action="{{ path('execute_login') }}">
                            <input class="span2" type="text" placeholder="Email" name="login_email">
                            <input class="span2" type="password" placeholder="Password" name="login_pass">
                            <button type="submit" class="btn">Sign in</button>
                            <div>
                                <a style="color:white;" href="{{ path('password_recovery') }}">Password recovery</a>
                                &nbsp;&nbsp;&nbsp;&nbsp;
                                <a style="color:white;" href="{{ path('resend_activation_hash') }}">Resend activation code</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="container" style="margin-top:60px;">
            {% if app.session.hasFlash('notice') %}
                <div class="flash-notice alert alert-success">
                    {{ app.session.flash('notice')|raw }}
                </div>
            {% endif %}
            {% if app.session.hasFlash('error') %}
                <div class="flash-danger alert alert-danger">
                    {{ app.session.flash('error')|raw }}
                </div>
            {% endif %}
            {% block body %}{% endblock %}
            <div class="sep"></div>
            <footer>
                <p>&copy; learn.md {{ now|date("Y") }}</p>
            </footer>
        </div>
    </body>
    {% block javascripts %}{% endblock %}
</html>
