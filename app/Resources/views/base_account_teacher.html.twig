<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Learn.md{% endblock %}</title>
        <meta name="keywords" content="{% block keywords %}{% endblock %}" />
        <meta name="description" content="{% block description %}{% endblock %}" />
        {% block canonical %}{% endblock %}
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
        {% block stylesheets %}
            <link href="../css/bootstrap.css" rel="stylesheet" type="text/css" />
            <link href="../css/style.css" rel="stylesheet" type="text/css" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" style="margin-top: 7px;" href="{{ path('homepage') }}">learn.md</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav" style="margin-top: 7px;">
                            <li class="active"><a href="{{ path('homepage') }}">Home</a></li>
                            <li><a href="{{ path('homepage') }}">How it works</a></li>
                            <li><a href="{{ path('course_list') }}">Courses</a></li>
                            <li><a href="{{ path('teacher_list') }}">Teachers</a></li>
                            <li><a href="{{ path('homepage') }}">Contact</a></li>
                            <li><a href="{{ path('logout') }}">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container" style="margin-top:60px;">
            {% if app.session.hasFlash('notice') %}
                <div class="flash-notice alert alert-success">
                    {{ app.session.flash('notice')|raw }}
                </div>
            {% endif %}
            {% if app.session.hasFlash('error') %}
                <div class="flash-danger alert alert-danger">
                    {{ app.session.flash('error')|raw }}
                </div>
            {% endif %}
            <div class="row-fluid">
                <div class="span2">
                    <ul class="nav nav-list">
                        <li>
                            <a href="{{ path('account_teacher_object') }}"><i class="icon-folder-close"></i>My objects</a>
                        </li>
                        <li>
                            <a href="{{ path('account_teacher_courses') }}"><i class="icon-bullhorn"></i>My courses</a>
                        </li>
                        <li>
                            <a href="{{ path('account_teacher_schedule') }}"><i class="icon-calendar"></i>Schedule</a>
                        </li>
                        <li>
                            <a href="{{ path('account_teacher_presentations') }}"><i class="icon-facetime-video"></i>Presentations</a>
                        </li>
                        <li>
                            <a href="{{ path('account_teacher_tests') }}"><i class="icon-list-alt"></i>Tests</a>
                        </li>
                        <li>
                            <a href="{{ path('account_teacher_texts') }}"><i class="icon-folder-open"></i>Texts</a>
                        </li>
                        <li>
                            <a href=""><i class="icon-book"></i>History</a>
                        </li>
<!--
                        <li>
                            <a href="javascript:;" onclick="$('#projects_submenu').toggle();"><i class="icon-list-alt"></i>Projects</a>
                            <div style="display:none;" id="projects_submenu">
                                <ul class="nav nav-list" style="margin-bottom:">
                                    <li>
                                        <a style="margin:0" href="/app_dev.php/backend/project-stats">Statistics</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
-->
                    </ul>
                </div>
                <div class="span10">
                    {% block body %}{% endblock %}
                </div>
            </div>
            <footer>
                <p>&copy; learn.md {{ now|date("Y") }}</p>
            </footer>
        </div>
    </body>
    {% block javascripts %}
        
    {% endblock %}
</html>
